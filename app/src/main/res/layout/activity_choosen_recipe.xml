<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosenRecipeActivity">





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imageView_choosen_recipe"
                                    android:layout_width="0dp"
                                    android:layout_height="300dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_baseline_insert_photo_24"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageButton
                                    android:id="@+id/imageButton"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="32dp"
                                    android:layout_marginEnd="16dp"
                                    android:background="@null"
                                    android:tint="#F1D4D4"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/like_favorite" />

                                <TextView
                                    android:id="@+id/textView_choosen_recipe_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:fontFamily="Josefin Sans"
                                    android:text="TextView"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView_choosen_recipe" />

                                <TextView
                                    android:id="@+id/textView_choosen_recipe_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/round_corner_cook_time"
                                    android:fontFamily="Acumin Pro"
                                    android:paddingHorizontal="15dp"
                                    android:text="TextView"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView_choosen_recipe" />

                                <TextView
                                    android:id="@+id/textView_choosen_recipe_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="2dp"
                                    android:fontFamily="Acumin Pro"
                                    android:paddingHorizontal="15dp"
                                    android:text="TextView"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/textView_choosen_recipe_time"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView_choosen_recipe" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="50dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Ingredienser"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="18sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView_choosen_recipe_title" />

                                <TextView
                                    android:id="@+id/textView_choosen_recipe_ingrediens"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp"
                                    android:text="TextView"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                                <TextView
                                    android:id="@+id/textView_choosen_recipe_description"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:text="TextView"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="32dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Beskrivning"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="18sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView_choosen_recipe_ingrediens" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
        </ScrollView>
</FrameLayout>